%html
  %head
    %title Next Holiday
    %meta{'http-equiv' => 'Content-Type', 'content' => 'text/html; charset=utf-8'}
    %meta{'http-equiv' => 'Content-Style-Type', 'content' => 'text/css'}
    %meta{'http-equiv' => 'Content-Script-Type', 'content' => 'text/javascript'}
    %meta{ name: 'description', content: '次の祝日を教えてくれるサービス' }
    %meta{ name: 'keywords', content: '祝日,お休み,休日,お出かけ' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
    %link{ href: '/assets/stylesheets/application.css', rel: 'stylesheet', type: 'text/css' }
    %link{ href: 'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', rel: 'stylesheet', type: 'text/css' }
    %link{ href: 'https://fonts.googleapis.com/css?family=EB+Garamond', rel: 'stylesheet', type: 'text/css' }
    %script{src: "http://code.jquery.com/jquery-3.2.1.min.js", integrity: "sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=", crossorigin: "anonymous"}
    %script{async: "async", defer: "defer", src: "https://cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.2.0/imagesloaded.pkgd.min.js"}
    %script{async: "async", defer: "defer", src: "/assets/javascripts/application.js"}
    %link{ rel: 'shortcut icon', href: '/favicon.ico'}
    %link{ rel: "apple-touch-icon", sizes: "180x180", href: "/favicons/apple-touch-icon.png"}
    %link{ rel: "icon", type: "image/png", sizes: "32x32", href: "/favicons/favicon-32x32.png"}
    %link{ rel: "icon", type: "image/png", sizes: "16x16", href: "/favicons/favicon-16x16.png"}
    %link{ rel: "manifest", href: "/favicons/manifest.json"}
    %link{ rel: "mask-icon", href: "/favicons/safari-pinned-tab.svg", color: "#5bbad5"}
    %meta{ name: "theme-color", content: "#ffffff"}
  %body
    .first-background-image.is-image-center{class: "is-#{@holiday.date.month}", style: "background-image: url(/images/bg_#{@holiday.date.month}_2.jpg)" }
    .last-background-image.is-image-center.js-preload#js-background-image{ style: "background-image: url(/images/bg_#{@holiday.date.month}_1.jpg)" }
    .wrapper
      .wrapper__inner
        %main.main
          .next-holiday
            .next-holiday__inner
              %h1.next-holiday__title
                - if request.path == "/"
                  次の祝日は？
                - else
                  %a.next-holiday__title-link{href: "/"}
                    Next Holiday
              %time.next-holiday__date
                #{@holiday.date.month}月#{@holiday.date.day}日(#{@holiday.wday_name})
              %nav.next-holiday-nav
                %ul.next-holiday-nav__items
                  %li.next-holiday-nav__item.is-prev
                    %a.next-holiday-nav__item-link{ href: "/date/#{@prev.date}" }
                      %i.fa.fa-angle-left
                  %li.next-holiday-nav__item.is-current
                    = @holiday.name
                  %li.next-holiday-nav__item.is-next
                    %a.next-holiday-nav__item-link{ href: "/date/#{@next.date}" }
                      %i.fa.fa-angle-right

        %footer.footer
          %h2.footer__title
            %a{href: "/"}
              Next Holiday
          .footer__powerd-by
            Powerd by
            %a{href: "https://github.com/holiday-jp/holiday_jp", target:"_blank"}
              holiday_jp
          .footer__photos
            Photos by
            %a{href: "https://www.pakutaso.com/", target:"_blank"}
              フリー写真素材ぱくたそ
          %small.footer__copyright
            Copyright
            %i.fa.fa-copyright
            = Date.today.year
            <a href="http://fjord.jp" target="_blank">FJORD, LLC</a>


    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2927688-10']);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
